<div class="grid lg:grid-cols-2 md:grid-cols-2 grid-cols-1 items-center gap-5">
    <div class="border border-gray-300 bg-white p-5 rounded-md space-y-4">
        <div class="flex items-center gap-2">
            <i data-lucide="package" class="w-5 h-5"></i>
            <span class="font-medium">Total Product</span>
        </div>
        <h1 class="text-3xl font-semibold">@ViewBag.TotalProduct</h1>
    </div>

    <div class="border border-gray-300 bg-white p-5 rounded-md space-y-4">
        <div class="flex items-center gap-2">
            <i data-lucide="archive" class="w-5 h-5"></i>
            <span class="font-medium">Total Category</span>
        </div>
        <h1 class="text-3xl font-semibold">@ViewBag.TotalCategory</h1>
    </div>
</div>
