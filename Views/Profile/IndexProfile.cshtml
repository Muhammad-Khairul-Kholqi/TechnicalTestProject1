@{
    ViewData["Title"] = "Profile";
}

<div class="bg-white min-h-screen rounded-2xl">
    <div class="bg-gradient-to-br from-[#FE5F00] to-[#FFB800] p-32 rounded-t-2xl shadow-md relative">
        <div class="absolute bg-white p-2 rounded-full left-10 bottom-0 trasnform translate-y-1/2 shadow-lg hover:scale-105 transition-transform duration-300">
            <img 
                src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcTsmcBGBK53A9NHzfHIsBK0UX5TAhlceYXiPTEntCrtRrf3ZuR5" 
                alt="Profile Image" 
                class="w-44 h-44 rounded-full object-cover"
            >
        </div>
    </div>

    <div class="flex flex-col lg:flex-row gap-10 items-start justify-start mt-[110px] p-10">
        <div class="flex flex-col ites-start space-y-4 w-full max-w-[300px]">
            <h2 class="text-2xl font-semibold">Muhammad Khairul Kholqi</h2>
            <h3 class="text-xl font-medium text-gray-500">Irul23</h3>
            <h3 class="text-xl font-medium text-gray-500">khairulkholqi@gmail.com</h3>
        </div>

        <div class="bg-white border border-gray-100 p-6 rounded-xl shadow-md w-full">
            @* Tabs *@
            <div class="mb-6">
                <div class="flex space-x-8 border-b border-gray-200">
                    <div class="profile-tab-item active cursor-pointer pb-3 relative" data-tab="edit-data">
                        <span class="text-[#FE5F00] font-medium">Edit Data</span>
                        <div class="absolute bottom-0 left-0 right-0 h-1 mb-[-2px] rounded-md bg-[#FE5F00]"></div>
                    </div>
                    <div class="profile-tab-item cursor-pointer pb-3 relative" data-tab="edit-password">
                        <span class="text-gray-500 font-medium hover:text-[#FE5F00]">Edit Password</span>
                        <div class="absolute bottom-0 left-0 right-0 h-1 mb-[-2px] rounded-md bg-transparent"></div>
                    </div>
                </div>
            </div>

            @* Tab Content - Edit Data *@
            <div id="edit-data-content" class="tab-content space-y-4">
                <div>
                    <span class="text-gray-500 font-medium">Full Name</span>
                    <input 
                        type="text" 
                        class="w-full h-[50px] mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-[#FE5F00] focus:border-[#FE5F00]" 
                        value="Muhammad Khairul Kholqi"
                    >
                </div>

                <div>
                    <span class="text-gray-500 font-medium">Username</span>
                    <input 
                        type="text" 
                        class="w-full h-[50px] mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-[#FE5F00] focus:border-[#FE5F00]" 
                        value="Irul23"
                    >
                </div>

                <div>
                    <span class="text-gray-500 font-medium">Email</span>
                    <input 
                        type="email" 
                        class="w-full h-[50px] mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-[#FE5F00] focus:border-[#FE5F00]" 
                        value="khairulkholqi@gmail.com"
                    >
                </div>

                <button class="rounded-md w-full text-center bg-[#FE5F00] h-[50px] text-white text-lg hover:bg-[#FE5F00]/90">Save Changes</button>
            </div>

            @* Tab Content - Edit Password *@
            <div id="edit-password-content" class="tab-content space-y-4 hidden">
                <div>
                    <span class="text-gray-500 font-medium">Old Password</span>
                    <div class="relative">
                        <input 
                            type="password" 
                            class="w-full h-[50px] mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-[#FE5F00] focus:border-[#FE5F00] pr-10" 
                            placeholder="Enter old password"
                            id="current-password"
                        >
                        <button type="button" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-[#FE5F00]" onclick="togglePassword('current-password', this)">
                            <i data-lucide="eye" class="w-5 h-5"></i>
                        </button>
                    </div>
                </div>

                <div>
                    <span class="text-gray-500 font-medium">New Password</span>
                    <div class="relative">
                        <input 
                            type="password" 
                            class="w-full h-[50px] mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-[#FE5F00] focus:border-[#FE5F00] pr-10" 
                            placeholder="Enter new password"
                            id="new-password"
                        >
                        <button type="button" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-[#FE5F00]" onclick="togglePassword('new-password', this)">
                            <i data-lucide="eye" class="w-5 h-5"></i>
                        </button>
                    </div>
                </div>

                <div>
                    <span class="text-gray-500 font-medium">Confirm New Password</span>
                    <div class="relative">
                        <input 
                            type="password" 
                            class="w-full h-[50px] mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-[#FE5F00] focus:border-[#FE5F00] pr-10" 
                            placeholder="Confirm new password"
                            id="confirm-password"
                        >
                        <button type="button" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-[#FE5F00]" onclick="togglePassword('confirm-password', this)">
                            <i data-lucide="eye" class="w-5 h-5"></i>
                        </button>
                    </div>
                </div>

                <button class="rounded-md w-full text-center bg-[#FE5F00] h-[50px] text-white text-lg hover:bg-[#FE5F00]/90">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<script>
    // function show passowd
    function togglePassword(inputId, button) {
        const passwordInput = document.getElementById(inputId);
        const icon = button.querySelector('i');
        
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            icon.setAttribute('data-lucide', 'eye-closed');
        } else {
            passwordInput.type = 'password';
            icon.setAttribute('data-lucide', 'eye');
        }
        
        lucide.createIcons();
    }

    document.addEventListener('DOMContentLoaded', function() {
        // Profile tab functionality
        const profileTabItems = document.querySelectorAll('.profile-tab-item');
        const tabContents = document.querySelectorAll('.tab-content');

        profileTabItems.forEach(tab => {
            tab.addEventListener('click', function() {
                const targetTab = this.getAttribute('data-tab');
                
                // Remove active class from all tabs
                profileTabItems.forEach(t => {
                    t.classList.remove('active');
                    const span = t.querySelector('span');
                    const line = t.querySelector('div');
                    span.classList.remove('text-[#FE5F00]');
                    span.classList.add('text-gray-500');
                    line.classList.remove('bg-[#FE5F00]');
                    line.classList.add('bg-transparent');
                });
                
                // Add active class to clicked tab
                this.classList.add('active');
                const span = this.querySelector('span');
                const line = this.querySelector('div');
                span.classList.add('text-[#FE5F00]');
                span.classList.remove('text-gray-500');
                line.classList.add('bg-[#FE5F00]');
                line.classList.remove('bg-transparent');

                // Hide all tab contents
                tabContents.forEach(content => {
                    content.classList.add('hidden');
                });

                // Show target tab content
                const targetContent = document.getElementById(targetTab + '-content');
                if (targetContent) {
                    targetContent.classList.remove('hidden');
                }
            });
        });
    });
</script>