@{
    Layout = null;
    ViewData["Title"] = "Create Your Account";

    //Variables for SVG Icons
    var EmailIcon = @"
        <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 20 20'>
            <path d='M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z' />
            <path d='M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z' />
        </svg>";
    var PasswordIcon = @"
        <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 20 20'>
            <path fill-rule='evenodd' d='M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z' clip-rule='evenodd' />
        </svg>";
    var EyeIcon = @"
        <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 20 20'>
            <path d='M10 12a2 2 0 100-4 2 2 0 000 4z' />
            <path fill-rule='evenodd' d='M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z' clip-rule='evenodd' />
        </svg>";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>@ViewData["Title"]</title>
</head>
<body class="min-h-screen bg-white flex">
    <!-- Left content - Signup Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-6 lg:p-12 bg-white">
        <div class="w-full max-w-md">
            <h1 class="mb-2 text-2xl font-semibold text-gray-700">Create Account!</h1>
            <p class="mb-6 text-gray-500">Lorem ipsum dolor sit amet consectetur adipisicing elit</p>
            
            <form class="space-y-6">
                <!-- Email Input -->
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">
                        Email Address <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">@Html.Raw(EmailIcon)</span>
                        <input 
                            type="email" 
                            placeholder="Enter your email"
                            class="w-full pl-12 pr-4 py-2 border-2 border-gray-200 rounded-md focus:border-gray-300 focus:outline-none transition-colors duration-200"
                            required
                        >
                    </div>
                </div>

                <!-- Password Input -->
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">
                        Password <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">@Html.Raw(PasswordIcon)</span>
                        <input 
                            type="password" 
                            id="passwordInput"
                            placeholder="Enter your password"
                            class="w-full pl-12 pr-4 py-2 border-2 border-gray-200 rounded-md focus:border-gray-300 focus:outline-none transition-colors duration-200"
                            required
                        >
                        <span id="togglePassword" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 cursor-pointer hover:text-blue-500 transition-colors">
                            @Html.Raw(EyeIcon)
                        </span>
                    </div>
                </div>

                <!-- Sign In Button -->
                <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-2 px-6 rounded-md hover:bg-blue-700 transition-all duration-300">
                    Sign Up
                </button>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-white text-gray-500">or</span>
                    </div>
                </div>

                <!-- Sign In with Google -->
                <button 
                    type="button"
                    class="w-full bg-white border-2 border-gray-200 text-gray-800 font-semibold py-3 px-6 rounded-md hover:border-gray-300 hover:bg-gray-50 transition-all duration-300 flex items-center justify-center space-x-3"
                >
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span>Signup with Google</span>
                </button>

                <!-- Register Link -->
                <div class="text-end mt-6">
                    <p class="text-gray-600">
                        Have an account? 
                        <a asp-controller="Auth" asp-action="Login" class="text-blue-600 hover:text-blue-700 font-semibold transition-colors">
                            Signin here
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Right content - Welcome Section -->
    <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden bg-[#F6F7F9]">
        <div class="flex flex-col justify-center items-center p-12 text-gray-700">
            <h1 class="text-4xl font-bold mb-4 text-gray-800">Welcome Back!</h1>
            <p class="text-xl text-gray-600">
                Bergabunglah dengan ribuan pengguna yang telah mempercayai platform kami untuk mengelola kebutuhan digital mereka.
            </p>
        </div>
    </div>

    <script>
        // Toggle password visibility
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('passwordInput');
            const togglePassword = document.getElementById('togglePassword');
            
            togglePassword.addEventListener('click', function() {
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    this.innerHTML = `
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd" />
                            <path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z" />
                        </svg>
                    `;
                } else {
                    passwordInput.type = 'password';
                    this.innerHTML = `
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                        </svg>
                    `;
                }
            });
        });
    </script>
</body>
</html>