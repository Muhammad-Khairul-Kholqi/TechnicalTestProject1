@{
    Layout = null;
    ViewData["Title"] = "Signin to Your Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <title>@ViewData["Title"]</title>
</head>
<body class="min-h-screen bg-white flex">
    <!-- Left content -->
    <div class="hidden lg:flex lg:w-1/2 relative bg-gradient-to-br from-[#FE5F00]/10 to-[#ff8d4d]/10">
        <div class="flex flex-col justify-center items-center p-12 w-full">
            <div class="bg-white/20 backdrop-blur-lg rounded-2xl p-8 border border-white/30 shadow-xl w-full max-w-2xl">
                <h1 class="text-4xl font-bold mb-6 text-gray-800">
                    Manage Your
                    <span class="text-[#FE5F00]">Products & Categories</span>
                </h1>
                
                <div class="grid grid-cols-2 gap-6 mb-8">
                    <div class="bg-white/40 p-5 rounded-xl border border-white/30">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="p-2 bg-[#FE5F00]/10 rounded-lg">
                                <i data-lucide="package" class="w-6 h-6 text-[#FE5F00]"></i>
                            </div>
                            <h3 class="font-semibold">Product Management</h3>
                        </div>
                        <p class="text-sm text-gray-600">Create, Read, Update and Delete products with ease</p>
                    </div>
                    
                    <div class="bg-white/40 p-5 rounded-xl border border-white/30">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="p-2 bg-[#FE5F00]/10 rounded-lg">
                                <i data-lucide="folder" class="w-6 h-6 text-[#FE5F00]"></i>
                            </div>
                            <h3 class="font-semibold">Category System</h3>
                        </div>
                        <p class="text-sm text-gray-600">Organize products into structured categories</p>
                    </div>
                    
                    <div class="bg-white/40 p-5 rounded-xl border border-white/30">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="p-2 bg-[#FE5F00]/10 rounded-lg">
                                <i data-lucide="database" class="w-6 h-6 text-[#FE5F00]"></i>
                            </div>
                            <h3 class="font-semibold">Data Integrity</h3>
                        </div>
                        <p class="text-sm text-gray-600">Secure and consistent data management</p>
                    </div>
                    
                    <div class="bg-white/40 p-5 rounded-xl border border-white/30">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="p-2 bg-[#FE5F00]/10 rounded-lg">
                                <i data-lucide="zap" class="w-6 h-6 text-[#FE5F00]"></i>
                            </div>
                            <h3 class="font-semibold">Fast Performance</h3>
                        </div>
                        <p class="text-sm text-gray-600">Quick operations with instant updates</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right content / form login -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-6 lg:p-12 bg-white">
        <div class="w-full max-w-md">
            <h1 class="mb-2 text-2xl font-semibold text-gray-700">Welcome Back!</h1>
            <p class="mb-6 text-gray-500">Start managing your account!</p>
            <form class="space-y-6">
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">
                        Email Address <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
                            <i data-lucide="mail" class="w-5 h-5"></i>
                        </span>
                        <input 
                            type="email" 
                            placeholder="Enter your email"
                            class="w-full pl-12 pr-4 py-2 border-2 border-gray-200 rounded-md focus:border-gray-300 focus:outline-none transition-colors duration-200"
                            required
                        >
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">
                        Password <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
                            <i data-lucide="lock-keyhole" class="w-5 h-5"></i>
                        </span>
                        <input 
                            type="password" 
                            id="passwordInput"
                            placeholder="Enter your password"
                            class="w-full pl-12 pr-4 py-2 border-2 border-gray-200 rounded-md focus:border-gray-300 focus:outline-none transition-colors duration-200"
                            required
                        >
                        <span id="togglePassword" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 cursor-pointer">
                            <i data-lucide="eye" class="w-5 h-5"></i>
                        </span>
                    </div>
                </div>

                <button type="submit" class="w-full bg-[#FE5F00] text-white font-semibold py-2 px-6 rounded-md hover:bg-orange-700 transition-all duration-300">
                    Sign In
                </button>

                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-white text-gray-500">or</span>
                    </div>
                </div>

                <button 
                    type="button"
                    class="w-full bg-white border-2 border-gray-200 text-gray-800 font-semibold py-3 px-6 rounded-md hover:border-gray-300 hover:bg-gray-50 transition-all duration-300 flex items-center justify-center space-x-3"
                >
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span>Signin with Google</span>
                </button>

                <div class="text-end mt-6">
                    <p class="text-gray-600">
                        Don't have an account? 
                        <a asp-controller="Auth" asp-action="Registration" class="text-[#FE5F00] hover:text-orange-700 font-semibold transition-colors">
                            Registration here
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('passwordInput');
            const togglePassword = document.getElementById('togglePassword');
            
            togglePassword.addEventListener('click', function () {
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    this.innerHTML = `<i data-lucide="eye-closed" class="w-5 h-5"></i>`;
                } else {
                    passwordInput.type = 'password';
                    this.innerHTML = `<i data-lucide="eye" class="w-5 h-5"></i>`;
                }
                lucide.createIcons();
            });
        });
    </script>
</body>
</html>